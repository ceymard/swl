{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noUnusedLocals": true,
        "rootDir": "./src",
        "outDir": "./lib",
        "lib": ["es2017", "esnext"],
        "types": ["node"]
    },
	"include": ["./src/*.ts"]
}
